<section class="super-section">


    <%- include('partials/menuSuper.ejs') %>


    <div class="container">


        <div class="text-center mt-5 mb-4">
            <div class="section-title" style="color: #1e29a4;animation: 5s infinite pulse;">
                <h2 class="font-weight-bold sombra-texto">NUEVO PRODUCTO</h2>
            </div>

            <div>
                <p class="sombra-texto">Ingresa tus metodos de pago de forma segura</p>
            </div>

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb site-pagination">
                    <li class="breadcrumb-item"><a href="/panel-super">Panel</a></li>
                    <li class="breadcrumb-item"><a href="/panel-super/productos">Productos</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nuevo Producto</li>
                </ol>
            </nav>
        </div>

        <hr>


        <form class="contact-form" method="post">


            <div class="row">

                <div class="col-md-3">
                    <div class="form-group">
                        <label class="label-pago">Codigo</label>
                        <input type="text" class="form-control"
                               placeholder="Codigo" min="0" maxlength="6" name="codigo">
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="label-pago"> Categoría</label>
                        <select name="categoria" class="form-control">
                            <option value="" selected disabled>Seleccionar</option>
                            <option value="Basica">Basica</option>
                            <option value="Transformadores">Transformadores</option>
                            <option value="Microcontroladores">Microcontroladores</option>
                            <option value="Arduino">Arduino</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="form-group">
                        <label class="label-pago">Nombre</label>
                        <input type="text" class="form-control"
                               placeholder="Nombre del Producto" name="nombre">
                    </div>
                </div>


            </div>


            <div class="row">

                <div class="col-md-3">
                    <div class="form-group">
                        <label class="label-pago">Cantidad</label>
                        <input type="number" class="form-control"
                               placeholder="Cantidad" min="0" name="cantidad">
                    </div>
                </div>


                <div class="col-md-3">
                    <div class="form-group">
                        <label class="label-pago">Precio de Compra ( $ )</label>
                        <input type="number" class="form-control"
                               placeholder="Precio de Compra" min="0" name="precioCompra">
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label class="label-pago">Precio de Venta ( $ )</label>
                        <input type="number" class="form-control"
                               placeholder="Precio de Venta" min="0" name="precioVenta">
                    </div>
                </div>


                <div class="col-md-3">
                    <div class="form-group">
                        <label class="label-pago">Estado</label>
                        <select name="estado" class="form-control">
                            <option value="Activo" selected>Activo</option>
                            <option value="Inactivo">Inactivo</option>

                        </select>
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="form-group">
                        <label class="label-pago">Descripción</label>
                        <div style="border-radius: 25px;font-size: 0.8rem">
                            <input type="hidden" id="x" name="descripcion">
                            <trix-editor input="x"></trix-editor>
                        </div>
                    </div>
                </div>


            </div>


            <div class="d-flex justify-content-center">
                <button type="submit" class="site-btn submit-order-btn button w-50">Guardar</button>
            </div>


        </form>


    </div>
</section>














