<section class="admin-section">
    <div class="container">

        <div class="row">

            <a href="/editar-perfil" class="admin-btn admin-btn--primary activado">Editar Perfil</a>
            <a href="/cambiar-password" class="admin-btn admin-btn--danger">Cambiar Password</a>
            <a href="" class="admin-btn admin-btn--info">Imagen de Perfil</a>
            <a href="" class="admin-btn admin-btn--success">Ver Ordenes</a>
            <a href="" class="admin-btn admin-btn--secondary">Direcciones de Envio</a>
            <a href="" class="admin-btn admin-btn--warning">Metodos de Pago</a>

        </div>



        <div class="text-center my-5">
            <div class="section-title" style="color: #1e29a4;animation: 5s infinite pulse;">
                <h2 class="font-weight-bold">EDITAR PERFIL</h2>
            </div>
        </div>


        <form class="contact-form">

            <div class="campo d-flex justify-content-center align-items-center" >
                <label>Nombre</label>
                <input type="text" placeholder="Tu Nombre" name="nombre" class="form__input w-75" style="border:1px solid #7e7e78!important;" >
            </div>

            <div class="campo d-flex justify-content-center align-items-center">
                <label>Email</label>
                <input type="email" placeholder="Tu Email" name="email" class="form__input w-75" style="border:1px solid #7e7e78!important;" >
            </div>

            <div class="campo d-flex justify-content-center align-items-center" >
                <label>Telefono</label>
                <input type="text" placeholder="Tu Telefono" name="telefono" class="form__input w-75" style="border:1px solid #7e7e78!important;" >
            </div>

            <div class="campo descripcion d-flex justify-content-center align-items-center">
                <label>Quien soy</label>
                <div class="form__input w-75 bg-primary">
                    <input type="hidden" id="x" name="descripcion">
                    <trix-editor style="border:1px solid #7e7e78!important;" input="x"></trix-editor>
                </div>
            </div>

            <div class="row">
                <div class="text-right col-8">
                    <button class="site-btn button">GUARDAR CAMBIOS</button>
                </div>
            </div>

        </form>

    </div>
</section>
